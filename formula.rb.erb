class <%= class_name %> < Formula

  desc "<%= description %>"
  homepage "<%= homepage %>"
  url "<%= url_prefix %>/<%= version %>.tar.gz"
  version "<%= version %>"
  sha256 "<%= sha %>"

  def install
<% install.each do |i| %>
    <%= i.chomp %>
<% end %>
  end

  <% depends_on.each do |d| %>
    <%= d.chomp %>
  <% end %>

end
